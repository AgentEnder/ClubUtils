<Window x:Class="ClubUtils.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClubUtils"
        mc:Ignorable="d"
        Title="Club Utils" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical" Grid.Column="1" Grid.Row="1">
            <DockPanel>
                <Label Content="Username: " DockPanel.Dock="Left"/>
                <TextBox Name="username" HorizontalAlignment="Right" Width="150" DockPanel.Dock="Right"/>
            </DockPanel>
            <DockPanel>
                <Label Content="Password: " DockPanel.Dock="Left"/>
                <PasswordBox ToolTip="Password" Width="150" HorizontalAlignment="Right" DockPanel.Dock="Right" PasswordChar="*"/>
            </DockPanel>
            <Label Content="Choose Your Club!" HorizontalAlignment="Center"/>
            <ComboBox Name="ClubPicker"></ComboBox>
            
        </StackPanel>
        <Button Grid.Column="1" Grid.Row="2" Name="LogIn" Click="LogIn_Click">
            <Label Content="Log In!"/>
        </Button>
    </Grid>
</Window>
