<Window x:Class="ClubUtils.NewBulletin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClubUtils"
        mc:Ignorable="d"
        Title="NewBulletin" Height="450" Width="800">
    <DockPanel Margin="25">
        <Border BorderBrush="Gainsboro" Background="GhostWhite" BorderThickness="2.0" DockPanel.Dock="Top" Margin="5">
            <StackPanel Orientation="Vertical">
                <TextBox Name="Heading" Text="&lt;HEADING&gt;"/>
                <Label Content="To toggle bold, italics, or underline use hotkeys (Ctrl-B), (Ctrl-I), (Ctrl-U) respectively"/>
                <RichTextBox Name="BulletinText" MinHeight="256"/>
            </StackPanel>
        </Border>
        <Button Name="CreateBtn" Click="CreateBtn_Click" DockPanel.Dock="Bottom" Width="128" Height="32">
            <Label Content="Create Bulletin"/> 
        </Button>
    </DockPanel>
</Window>
